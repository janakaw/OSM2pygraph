<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <style type="text/css">
      html { height: 100% }
      body { height: 100%; margin: 0; padding: 0 }
      #map_canvas { height: 100% }
    </style>
    <script type="text/javascript"
      src="http://maps.googleapis.com/maps/api/js?key=AIzaSyD29y39LDdNheGcYB5vMEMq2xGS19z8dEI&sensor=false">
    </script>
    <script type="text/javascript">
      function initialize() {
        var myLatLng = new google.maps.LatLng(40.0177949,116.341205);
        var mapOptions = {
          zoom: 8,
          center: myLatLng,
          mapTypeId: google.maps.MapTypeId.TERRAIN
        };

        var map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);

        var flightPlanCoordinates = [
            new google.maps.LatLng(39.9864766,116.32015),
						new google.maps.LatLng(39.9960799,116.3292833),
						new google.maps.LatLng(39.9999683,116.3322899),
						new google.maps.LatLng(40.0000749,116.3323233),
						new google.maps.LatLng(40.0177949,116.341205),
						new google.maps.LatLng(39.9884549,116.3176566),
						new google.maps.LatLng(39.979385,116.31034),
						new google.maps.LatLng(40.0178533,116.341345),
            new google.maps.LatLng(40.0185983,116.3410549)
        ];
        var flightPath = new google.maps.Polyline({
          path: flightPlanCoordinates,
          strokeColor: '#FF0000',
          strokeOpacity: 1.0,
          strokeWeight: 2
        });

        flightPath.setMap(map);
      }
    </script>
  </head>
  <body onload="initialize()">
    <div id="map_canvas" style="width:100%; height:100%"></div>
  </body>
</html>
